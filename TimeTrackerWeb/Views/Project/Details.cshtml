@model ProjectModelWithQuantitiesOfTime

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" disabled />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">Totals:</div>
        @Html.Partial("../SharedPartials/TotalElapsedTimeDisplayPartial", Model.QuantitiesOfTimeModel)
        <br />
        <br />
        <div class="col-12">Relatives:</div>
        @Html.Partial("../SharedPartials/RelativeElapsedTimeDisplayPartial", Model.QuantitiesOfTimeModel)
        <br />
        <br />
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <br /><br />
    @Html.Partial("../SharedElements/BackToListButton")
</div>
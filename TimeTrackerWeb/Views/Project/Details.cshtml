@model ProjectModelWithQuantitiesOfTime

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<hr/>

<div class="row">
    <div class="col-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-3 col-md-3 col-lg-3">
            </div>
            <div class="col-6 col-md-6 col-lg-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" disabled/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-3 col-md-3 col-lg-3">
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 mx-auto">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" disabled></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-12 text-center">
            @Html.Partial("../SharedElements/BackToListButton")
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="col-12">Totals:</div>
            @Html.Partial("../SharedPartials/TotalElapsedTimeDisplayPartial", Model.QuantitiesOfTimeModel)
            <br/>
            <br/>
            <div class="col-12">Relatives:</div>
            @Html.Partial("../SharedPartials/RelativeElapsedTimeDisplayPartial", Model.QuantitiesOfTimeModel)
            <br/>
            <br/>
        </div>
    </div>
</div>
@model EventModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-0 col-md-2 col-lg-3">
            </div>
            <div class="col-6 col-md-4 col-lg-3">
                <div class="form-group">
                    <label asp-for="StartDateTime" class="control-label"></label>
                    <input asp-for="StartDateTime" class="form-control" disabled />
                    <span asp-validation-for="StartDateTime" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-3">
                <div class="form-group">
                    <label asp-for="EndDateTime" class="control-label"></label>
                    <input asp-for="EndDateTime" class="form-control" disabled />
                    <span asp-validation-for="EndDateTime" class="text-danger"></span>
                </div>
            </div>
            <div class="col-0 col-md-2 col-lg-3">
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 mx-auto">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" disabled></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-md-12 text-center">
            @Html.Partial("./BackToEventListButton", Model.ProjectId)
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
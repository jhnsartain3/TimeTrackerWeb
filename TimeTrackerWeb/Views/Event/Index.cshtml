@model IEnumerable<EventModelWithQuantitiesOfTimeAndDateTimeInfoHeaders>

@{
    ViewData["Title"] = "Events";
}

<div class="row">
    <div class="col-4 mx-auto">
        <a asp-action="Create" asp-route-id="@ViewBag.itemId" class="btn btn-success" style="margin-left: 30px; white-space:nowrap">New Event</a>
    </div>

    <div class="col-4 mx-auto">
        <div class="float-right">
            <a asp-action="Start" asp-route-id="@ViewBag.itemId" style="float:right; margin-right: 30px;white-space:nowrap" class="btn btn-primary">Start Clock</a>
        </div>
    </div>
</div>

<div class="container" style="padding: 10px">
    @{
        if (!Model.Any())
        {
            <div style="text-align:center">No records this week</div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.IsDateTimeInfoHeaderRecord)
                    {
                        <div class="col-12 badge badge-pill badge-primary" style="margin-top:20px;">
                            <div class="row" style=" font-size:15px; padding:15px">
                                @item.HeaderDate.ToShortDateString()
                                @Html.Partial("../SharedPartials/RelativeElapsedTimeDisplayPartial", item.QuantitiesOfTimeModel)
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card text-white bg-secondary mb-0" style="max-width: 18rem;margin:10px">
                            <div class="card-header">
                                @Html.DisplayFor(modelItem => item.StartTimeDisplayOnly)
                                -
                                @{
                                    if (item.EndDateTime == null)
                                    { <a asp-action="Stop" asp-route-id="@item.Id" class="btn btn-danger">Stop</a> }
                                    else
                                    { @Html.DisplayFor(modelItem => item.EndTimeDisplayOnly) }
                                }
                            </div>

                            <div class="card-body" style="padding-bottom:0px">

                                <h5 class="card-title">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </h5>

                                <text class="card-text">
                                    @Html.Partial("../SharedPartials/RelativeElapsedTimeDisplayPartial", item.QuantitiesOfTimeModel)
                                </text>
                            </div>
                            <div class="align-self-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn rounded" style="width:100%">✏️</a>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    }

    <br />
    <div style="text-align:center">
        <a asp-action="AllRecords" asp-route-id="@ViewBag.itemId" class="btn btn-primary">Show Older</a>
    </div>
</div>